<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BasicComposeDemo"
        tools:targetApi="31">
        <activity
            android:name=".views.activities.IntroductionActivity"
            android:exported="false"
            android:label="@string/title_activity_introduction"
            android:theme="@style/Theme.BasicComposeDemo" />
        <activity
            android:name=".views.activities.TextStylingDemoActivity"
            android:exported="false"
            android:label="@string/title_activity_text_styling_demo"
            android:theme="@style/Theme.BasicComposeDemo" />
        <activity
            android:name=".views.activities.ImageCardDemoActivity"
            android:exported="false"
            android:label="@string/title_activity_image_card_demo"
            android:theme="@style/Theme.BasicComposeDemo" />
        <activity
            android:name=".views.activities.ModifiersDemoActivity"
            android:exported="false"
            android:label="@string/title_activity_modifiers_demo"
            android:theme="@style/Theme.BasicComposeDemo" />
        <activity
            android:name=".views.activities.RowsAndColumnsBasicsActivity"
            android:exported="false"
            android:label="@string/title_activity_rows_and_columns_basics"
            android:theme="@style/Theme.BasicComposeDemo" />
        <activity
            android:name=".views.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BasicComposeDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>